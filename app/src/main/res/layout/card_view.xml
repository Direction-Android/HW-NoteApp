<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/card_view_bottom_border"
    android:layout_height="100dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleOfNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="20sp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/defaultTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateOfNote"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:lines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOfNote"
        tools:ignore="MissingConstraints"
        tools:text="22:20" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textOfNote"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:maxLength="30"
        android:text="@string/card_view_default_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateOfNote" />

</androidx.constraintlayout.widget.ConstraintLayout>